<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="30dp" >

        <TextView
            android:id="@+id/fragStudent_tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp" />

        <!-- Add textView for display of quotation -->

        <Button
            android:id="@+id/fragStudent_btn_tutRequest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:text="Request Maestro" />

        <LinearLayout
            android:id="@+id/fragStudent_ll_tut_request"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:text="Choose Subject"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/fragStudent_spinner_subjectSelect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:entries="@array/subjectArray"
                android:prompt="@string/Maestro_spinner" />

            <EditText
                android:id="@+id/fragStudent_topic_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter topic/chapter name"
                android:maxLines="1"
                android:singleLine="true"
                android:typeface="serif"
                android:layout_margin="20dp" />

            <Button
                android:id="@+id/fragStudent_btn_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Submit" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>